<h1><%= @pins.title %></h1>

<p><%= @pins.description %></p>

<p>Enviado por <%= @pins.user.email%>, no dia <%= @pins.user.created_at.time.day %>/<%= @pins.user.created_at.time.month %>/<%= @pins.user.created_at.time.year %></p>
<% if current_user %>
    <% if Like.where(:pin => @pins.id, :user => current_user.id).ids[0].nil? %>
        <!-- Não entendi commo funciona o form abaixo -->
        <%= button_to "Like", like_path(@pins), method: "put" %>
    <% else %>
        <%= button_to "Unlike", unlike_path(@pins), method: :delete %> <!-- Como adicionar o Unlike? ou Remover o Like? -->
    <% end %>
    </br></br>
    <%= link_to "Editar Pin", edit_pin_path(@pins) %> | 
    <%= link_to "Apagar Pin", @pins, data:{'method': :delete, 'confirm': "Está certo disso?"} %> |
<% end %>



<%= link_to "Voltar", root_path %>

